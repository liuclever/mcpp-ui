.content-item-image-text {
  display: flex;
  padding: 24rpx;
  background: transparent;
  border-bottom: 1rpx solid rgba(208, 58, 106, 0.2);
}

.content-item-image-text:active {
  background: rgba(208, 58, 106, 0.1);
}

.item-cover {
  width: 240rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
  background: #f5f5f5;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.item-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 44rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  margin-bottom: 8rpx;
}

.item-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 38rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  margin-bottom: 8rpx;
}

.item-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.item-time {
  margin-right: 24rpx;
}

.item-views {
  color: #bbb;
}
