<!--图片列表形式内容列表项-->
<view class="content-item-image-grid" bindtap="onTap" wx:if="{{item}}">
  <view class="item-header">
    <view class="item-title">{{item.title}}</view>
    <view class="item-meta">
      <text class="item-time">{{item.publishTime}}</text>
      <text class="item-views" wx:if="{{item.viewCount}}">{{item.viewCount}}次浏览</text>
    </view>
  </view>
  
  <!-- 图片网格 -->
  <view class="image-grid image-grid-{{imageCount}}">
    <image 
      wx:for="{{displayImages}}"
      wx:key="index"
      class="grid-image"
      src="{{item}}"
      mode="aspectFill"
      lazy-load="{{true}}"
    />
  </view>
  
  <!-- 摘要 -->
  <view class="item-summary" wx:if="{{item.summary}}">{{item.summary}}</view>
</view>
