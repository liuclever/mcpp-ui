.content-item-image-grid {
  padding: 24rpx;
  background: transparent;
  border-bottom: 1rpx solid rgba(208, 58, 106, 0.2);
}

.content-item-image-grid:active {
  background: rgba(208, 58, 106, 0.1);
}

.item-header {
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 44rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  margin-bottom: 8rpx;
}

.item-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.item-time {
  margin-right: 24rpx;
}

.item-views {
  color: #bbb;
}

/* 图片网格布局 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.grid-image {
  border-radius: 8rpx;
  background: #f5f5f5;
}

/* 单张图片 */
.image-grid-1 .grid-image {
  width: 100%;
  height: 360rpx;
}

/* 两张图片 */
.image-grid-2 .grid-image {
  width: calc(50% - 6rpx);
  height: 240rpx;
}

/* 三张及以上图片 */
.image-grid-3 .grid-image,
.image-grid-4 .grid-image,
.image-grid-5 .grid-image,
.image-grid-6 .grid-image,
.image-grid-7 .grid-image,
.image-grid-8 .grid-image,
.image-grid-9 .grid-image {
  width: calc(33.33% - 8rpx);
  height: 200rpx;
}

.item-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 38rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}
