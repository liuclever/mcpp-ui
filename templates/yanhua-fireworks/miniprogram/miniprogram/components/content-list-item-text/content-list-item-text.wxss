.content-item-text {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background: transparent;
  border-bottom: 1rpx solid rgba(208, 58, 106, 0.2);
}

.content-item-text:active {
  background: rgba(208, 58, 106, 0.1);
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 44rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  margin-bottom: 12rpx;
}

.item-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.item-time {
  margin-right: 24rpx;
}

.item-views {
  color: #bbb;
}

.item-arrow {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.arrow-icon {
  font-size: 36rpx;
  color: #ccc;
}
