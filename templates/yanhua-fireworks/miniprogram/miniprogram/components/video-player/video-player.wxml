<view class="video-player-container">
  <video 
    id="video-player-{{playerId}}"
    class="video-player"
    src="{{videoUrl}}"
    poster="{{coverUrl}}"
    autoplay="{{autoplay}}"
    loop="{{loop}}"
    controls="{{controls}}"
    show-center-play-btn="{{showCenterPlayBtn}}"
    show-play-btn="{{showPlayBtn}}"
    enable-progress-gesture="{{enableProgressGesture}}"
    object-fit="{{objectFit}}"
    bindplay="onPlay"
    bindpause="onPause"
    bindended="onEnded"
    binderror="onError"
    bindtimeupdate="onTimeUpdate"
    bindwaiting="onWaiting"
  />
  
  <!-- 自定义播放按钮 (可选) -->
  <view 
    wx:if="{{showCustomPlayBtn && !isPlaying}}" 
    class="custom-play-btn"
    bindtap="togglePlay"
  >
    <image class="play-icon" src="/assets/icons/play-big.png" mode="aspectFit" />
  </view>
  
  <!-- 加载状态 -->
  <view wx:if="{{isLoading}}" class="loading-overlay">
    <view class="loading-spinner"></view>
  </view>
</view>
