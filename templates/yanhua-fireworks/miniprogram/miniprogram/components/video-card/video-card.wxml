<view class="video-card video-card-{{mode}}" bindtap="onTap" wx:if="{{video}}">
  <!-- 图墙模式 -->
  <view class="grid-mode" wx:if="{{mode === 'grid'}}">
    <view class="video-cover">
      <image src="{{video.coverUrl}}" mode="aspectFill" class="cover-image"></image>
      <view class="play-icon">
        <image src="/assets/icons/play-white.png" class="play-icon-img"></image>
      </view>
    </view>
    <view class="video-info">
      <text class="video-title">{{video.title}}</text>
      <view class="video-stats">
        <image src="/assets/icons/heart-pink.png" class="stat-icon"></image>
        <text class="stat-text">{{video.likes}}</text>
      </view>
    </view>
  </view>

  <!-- 列表模式 -->
  <view class="list-mode" wx:if="{{mode === 'list'}}">
    <view class="video-cover">
      <image src="{{video.coverUrl}}" mode="aspectFill" class="cover-image"></image>
      <view class="play-icon">
        <image src="/assets/icons/play-white.png" class="play-icon-img"></image>
      </view>
    </view>
    <view class="video-content">
      <text class="video-title">{{video.title}}</text>
      <view class="user-info">
        <image src="{{video.userAvatar || '/assets/images/default-avatar.png'}}" class="user-avatar"></image>
        <text class="user-name">{{video.userName}}</text>
      </view>
      <view class="video-stats">
        <view class="stat-item">
          <image src="/assets/icons/eye-gray.png" class="stat-icon"></image>
          <text class="stat-text">{{video.views}}</text>
        </view>
        <view class="stat-item">
          <image src="{{video.isLiked ? '/assets/icons/heart-filled.png' : '/assets/icons/heart-gray.png'}}" class="stat-icon"></image>
          <text class="stat-text">{{video.likes}}</text>
        </view>
        <view class="stat-item">
          <image src="/assets/icons/comment.png" class="stat-icon"></image>
          <text class="stat-text">{{video.comments}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
