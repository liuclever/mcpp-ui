/* pages/community/index.wxss */
.community-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* Banner卡片 */
.banner-cards {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.banner-card {
  width: 100%;
  height: 160rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.banner-card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

/* 第一个卡片：粉红到橙色渐变 */
.card-gradient-1 {
  background: linear-gradient(135deg, #ff6b9d 0%, #ffa06b 100%);
}

/* 第二个卡片：蓝色渐变 */
.card-gradient-2 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.sort-tabs {
  display: flex;
  gap: 40rpx;
}

.sort-tab {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 0;
}

.sort-tab.active {
  color: #d03a6a;
  font-weight: 500;
}

.sort-arrow {
  font-size: 20rpx;
}

.layout-switch {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.layout-icon {
  font-size: 32rpx;
  color: #666;
}

/* 视频网格（双列） */
.video-grid {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
}

.grid-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.video-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.video-cover {
  width: 100%;
  height: 450rpx;
  display: block;
  background-color: #f0f0f0;
}

.video-info {
  padding: 16rpx;
}

.video-hashtag {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.video-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.user-avatar-small {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.user-name-small {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.interaction-info {
  margin-top: 8rpx;
  padding: 0 12rpx;
  display: flex;
  justify-content: space-between;
}

.interaction-item {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 单列布局 */
.video-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.video-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.card-header {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 16rpx;
  gap: 16rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.card-content {
  padding: 0 24rpx 16rpx;
}

.video-hashtag {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 16rpx;
}

.video-thumbnail {
  width: 100%;
  height: 500rpx;
  border-radius: 12rpx;
  display: block;
  background-color: #f0f0f0;
}

.card-interaction {
  padding: 20rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
}

.card-interaction-item {
  font-size: 30rpx;
  color: #999;
  line-height: 1.4;
}

/* 发布按钮（悬浮） */
.publish-fab {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d 0%, #d03a6a 100%);
  box-shadow: 0 12rpx 32rpx rgba(208, 58, 106, 0.5), 0 4rpx 12rpx rgba(208, 58, 106, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
  animation: pulse 2s ease-in-out infinite;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.publish-fab .publish-icon {
  width: 52rpx;
  height: 52rpx;
}

.publish-fab .publish-text {
  font-size: 20rpx;
  color: #fff;
  margin-top: 4rpx;
  font-weight: 500;
}

/* 发布按钮脉冲动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 12rpx 32rpx rgba(208, 58, 106, 0.5), 0 4rpx 12rpx rgba(208, 58, 106, 0.3);
  }
  50% {
    transform: scale(1.08);
    box-shadow: 0 16rpx 40rpx rgba(208, 58, 106, 0.6), 0 6rpx 16rpx rgba(208, 58, 106, 0.4);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 12rpx 32rpx rgba(208, 58, 106, 0.5), 0 4rpx 12rpx rgba(208, 58, 106, 0.3);
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-icon-text {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.empty-btn {
  padding: 24rpx 60rpx;
  background-color: #d03a6a;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #d03a6a;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}
