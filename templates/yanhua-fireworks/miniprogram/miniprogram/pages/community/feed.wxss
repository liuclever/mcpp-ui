/* pages/community/feed.wxss */
.feed-container {
  width: 100%;
  height: 100vh;
  background-color: #000;
  position: relative;
}

/* 顶部导航栏 */
.nav-bar {
  position: absolute;
  top: 88rpx;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 40rpx;
  min-width: 120rpx;
}

.back-icon {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

.back-text {
  color: #fff;
  font-size: 28rpx;
}

.video-swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.video-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #000;
}

/* 视频播放器 */
.video-player {
  width: 100%;
  height: 100vh;
  max-height: 100%;
}

/* 视频点击区域 */
.video-tap-area {
  position: absolute;
  top: 0;
  left: 0;
  right: 100rpx;
  bottom: 0;
  z-index: 5;
  background: transparent;
}

/* 视频信息层 */
.video-info {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 100rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  z-index: 10;
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-right: 20rpx;
}

.author-details {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}

.time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.video-desc {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.location {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 右侧互动栏 */
.interaction-side {
  position: absolute;
  right: 20rpx;
  bottom: 120rpx;
  z-index: 20;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 400rpx;
}

/* 加载状态 */
.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 28rpx;
  z-index: 100;
}

/* 空状态 */
.empty {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 评论弹窗 */
.comment-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.comment-popup-content {
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.comment-popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.related-product {
  display: flex;
  align-items: center;
  flex: 1;
}

.related-label {
  font-size: 28rpx;
  color: #999;
  margin-right: 8rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.comment-popup-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.comment-popup-close image {
  width: 32rpx;
  height: 32rpx;
}

.comment-count {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-popup-body {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
  min-height: 400rpx;
  max-height: calc(80vh - 200rpx);
}

.comment-popup-footer {
  border-top: 1rpx solid #f0f0f0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.comment-input-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background-color: #f5f5f5;
  border-radius: 48rpx;
  padding: 16rpx 24rpx;
}

.comment-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
  border: none;
  outline: none;
}

.comment-input-placeholder {
  color: #999;
}

.comment-send-btn {
  padding: 8rpx 24rpx;
  font-size: 28rpx;
  color: #999;
  background-color: transparent;
  border: none;
  line-height: 1;
  min-width: auto;
  height: auto;
}

.comment-send-btn::after {
  border: none;
}

.comment-send-btn.active {
  color: #ff6b9d;
  font-weight: 600;
}

.comment-send-btn[disabled] {
  color: #ccc;
}

/* 分享弹窗 */
.share-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.share-popup-content {
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.share-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.share-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.share-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-close text {
  font-size: 40rpx;
  color: #999;
}

.share-options {
  display: flex;
  justify-content: center;
  padding: 50rpx 60rpx;
  margin-left: -60rpx;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 50rpx !important;
  line-height: 1;
  width: auto;
  min-width: 0;
}

.share-option::after {
  border: none;
}

.share-icon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.share-icon .icon-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.wechat-icon {
  background: linear-gradient(135deg, #2aae67 0%, #07c160 100%);
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
}

.timeline-icon {
  background: linear-gradient(135deg, #576b95 0%, #3e5682 100%);
  box-shadow: 0 8rpx 20rpx rgba(87, 107, 149, 0.3);
}

.share-label {
  font-size: 26rpx;
  color: #666;
}

.share-cancel {
  padding: 30rpx;
  text-align: center;
  border-top: 1rpx solid #f0f0f0;
}

.share-cancel text {
  font-size: 30rpx;
  color: #666;
}
