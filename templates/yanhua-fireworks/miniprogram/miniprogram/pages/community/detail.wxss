/* pages/community/detail.wxss */
.detail-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background-color: #d03a6a;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
  box-sizing: content-box;
  z-index: 1000;
}

.back-btn {
  position: absolute;
  left: 16px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.back-icon {
  font-size: 20px;
  color: #fff;
}

.back-text {
  font-size: 16px;
  color: #fff;
}

.nav-title {
  font-size: 18px;
  font-weight: 500;
  color: #fff;
}

/* 视频区域 */
.video-section {
  padding-top: calc(88rpx + constant(safe-area-inset-top));
  padding-top: calc(88rpx + env(safe-area-inset-top));
  background-color: #000;
}

.video-player {
  width: 100%;
  height: 400rpx;
}

.video-info {
  background-color: #fff;
  padding: 24rpx;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.author-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.video-desc {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.5;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 相关产品 */
.product-section {
  background-color: #fff;
  margin-top: 16rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.product-tag {
  padding: 8rpx 24rpx;
  background-color: #fff0f5;
  color: #d03a6a;
  font-size: 26rpx;
  border-radius: 32rpx;
  border: 1px solid #d03a6a;
}

/* 评论区 */
.comment-section {
  background-color: #fff;
  margin-top: 16rpx;
  padding: 24rpx;
  min-height: 400rpx;
}

.comment-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #d03a6a;
  border-radius: 32rpx;
}

.comment-icon {
  width: 32rpx;
  height: 32rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #fff;
}
