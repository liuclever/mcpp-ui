<!--pages/community/preview.wxml-->
<view class="preview-page">
  <!-- 顶部导航栏 -->
  <view class="nav-bar">
    <view class="back-btn" bindtap="close">
      <text class="back-icon">←</text>
      <text class="back-text">返回</text>
    </view>
  </view>

  <!-- 视频播放器 -->
  <video 
    class="preview-video"
    src="{{videoPath}}"
    controls
    autoplay
    show-center-play-btn
    enable-play-gesture
    object-fit="contain"
  />
</view>
