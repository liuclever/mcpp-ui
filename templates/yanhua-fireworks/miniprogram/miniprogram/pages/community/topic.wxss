/* pages/community/topic.wxss */
.topic-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 话题头部 */
.topic-header {
  background-color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.topic-tag {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #d03a6a;
  margin-bottom: 16rpx;
}

.topic-count {
  font-size: 28rpx;
  color: #999;
}

/* 视频网格 */
.video-grid {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.grid-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.video-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.video-cover {
  width: 100%;
  height: 400rpx;
  display: block;
}

.video-info {
  padding: 20rpx;
}

.video-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.video-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.stat-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #d03a6a;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}
