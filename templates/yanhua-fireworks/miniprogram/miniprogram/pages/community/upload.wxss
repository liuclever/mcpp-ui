/* pages/community/upload.wxss */
.upload-page {
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.nav-back {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.nav-placeholder {
  width: 80rpx;
}

/* 内容区 */
.content {
  flex: 1;
  padding-bottom: 120rpx;
}

/* 视频导入区域 */
.video-import-section {
  padding: 30rpx;
}

.video-import-box {
  width: 100%;
  height: 400rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #d0d0d0;
}

.import-icon {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 80rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.import-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.import-tip {
  font-size: 24rpx;
  color: #999;
}

.video-preview {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  background: #000;
}

.preview-video {
  width: 100%;
  height: 100%;
}

.reselect-btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  padding: 12rpx 30rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

/* 表单区域 */
.form-container {
  background: #fff;
  padding: 30rpx;
}

.form-group {
  margin-bottom: 40rpx;
  position: relative;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4444;
  margin-left: 6rpx;
  font-size: 28rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
}

.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  min-height: 96rpx;
}

.picker-input .placeholder {
  color: #999;
  font-size: 32rpx;
  line-height: 1.5;
}

.picker-input .selected {
  color: #333;
  font-size: 32rpx;
  line-height: 1.5;
}

.picker-input .arrow {
  font-size: 40rpx;
  color: #999;
  transform: rotate(90deg);
  flex-shrink: 0;
  margin-left: 12rpx;
}

.topic-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.topic-tag {
  padding: 12rpx 24rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid #e5e5e5;
  white-space: nowrap;
}

.topic-tag.selected {
  background: #fff0f5;
  color: #d03a6a;
  border-color: #d03a6a;
}

.form-textarea {
  width: 100%;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 160rpx;
  border: 1rpx solid #e5e5e5;
}

.char-count {
  position: absolute;
  right: 0;
  bottom: -30rpx;
  font-size: 22rpx;
  color: #999;
}

/* 上传进度 */
.progress-section {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #d03a6a 0%, #e91e63 100%);
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #d03a6a;
  text-align: center;
  display: block;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.preview-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
}

.submit-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #d03a6a 0%, #e91e63 100%);
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: 600;
}

.submit-btn.disabled {
  background: #e5e5e5;
  color: #999;
}


/* Picker组件样式 - 尝试影响弹出选择器 */
.product-picker {
  font-size: 36rpx !important;
}

picker-view-column {
  font-size: 36rpx !important;
}

/* 自定义选择器弹窗 */
.custom-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: flex-end;
}

.custom-picker-content {
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.picker-cancel,
.picker-confirm {
  font-size: 32rpx;
  padding: 12rpx 20rpx;
}

.picker-cancel {
  color: #666;
}

.picker-confirm {
  color: #07c160;
  font-weight: 600;
}

.picker-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.picker-list {
  flex: 1;
  overflow-y: auto;
}

.picker-item {
  padding: 32rpx 30rpx;
  font-size: 34rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.2s;
}

.picker-item.active {
  background: #f0f9ff;
  color: #07c160;
  font-weight: 600;
}

.picker-item:active {
  background: #f5f5f5;
}


/* 隐藏的video和canvas用于截取封面 */
.hidden-video {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
  width: 1rpx;
  height: 1rpx;
  opacity: 0;
  pointer-events: none;
}

.hidden-canvas {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
  width: 750rpx;
  height: 1334rpx;
  opacity: 0;
  pointer-events: none;
}
