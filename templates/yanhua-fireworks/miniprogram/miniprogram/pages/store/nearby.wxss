/* 附近网点页样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-top: calc(180rpx + env(safe-area-inset-top));
  padding-bottom: 140rpx;
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  gap: 20rpx;
}

.back-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.back-arrow {
  width: 40rpx;
  height: 40rpx;
}

.location-info {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.location-text {
  font-size: 28rpx;
  color: #333;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #fff5f7;
  border: 2rpx solid #d03a6a;
  border-radius: 30rpx;
  padding: 12rpx 24rpx;
}

.search-box input {
  flex: 1;
  font-size: 26rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 提示栏 */
.tip-bar {
  text-align: center;
  padding: 16rpx;
  color: #d03a6a;
  font-size: 24rpx;
}

/* 网点列表 */
.store-list {
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

.store-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
}

.store-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.store-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.store-address {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.store-phone {
  font-size: 26rpx;
  color: #999;
}

.store-distance {
  font-size: 26rpx;
  color: #f5a623;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.store-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.call-btn {
  background: #fff;
  border: 2rpx solid #f5a623;
  color: #f5a623;
}

.nav-btn {
  background: linear-gradient(135deg, #f5a623 0%, #f7b84a 100%);
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #d03a6a;
  font-size: 28rpx;
}

/* 入驻按钮 */
.join-btn {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  border: 2rpx solid #d03a6a;
  color: #d03a6a;
  padding: 20rpx 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}
