/* 产品分类页样式 */
.container {
  min-height: 100vh;
  background: #ffffff;
  padding-bottom: 120rpx;
}

/* 顶部区域 */
.header-section {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
  padding-bottom: 30rpx;
  overflow: hidden;
}

/* 顶部背景图片 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 分类查找标题 */
.header-title {
  position: relative;
  z-index: 1;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

/* 品牌Banner包裹 */
.brand-banner-wrapper {
  position: relative;
  z-index: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 0 30rpx;
  margin-top: 80rpx;
}

/* 品牌Banner图片 */
.brand-banner {
  width: 100%;
  border-radius: 20rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgb(251, 209, 223);
  border: none;
  border-radius: 44rpx;
  padding: 20rpx 30rpx;
  margin: 30rpx 60rpx;
}

.search-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

.search-placeholder {
  margin-left: 16rpx;
  color: #c2185b;
  font-size: 28rpx;
}

.search-right {
  display: flex;
  align-items: center;
}

.search-divider {
  width: 2rpx;
  height: 32rpx;
  background: #c2185b;
  margin-right: 20rpx;
}

.scan-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 分割线装饰 */
.divider-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 60rpx;
  box-sizing: border-box;
}

.divider-img {
  width: 100%;
  max-width: 630rpx;
}

/* 分类列表 */
.category-list {
  padding: 0 50rpx;
}

.category-item {
  display: flex;
  align-items: stretch;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 80rpx;
  padding: 0 0 0 30rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(208, 58, 106, 0.25);
  min-height: 150rpx;
}

.category-left {
  display: flex;
  align-items: center;
  flex: 1;
  padding: 24rpx 0;
}

.category-arrow {
  width: 50rpx;
  height: 50rpx;
  background: #d03a6a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 24rpx;
}

.category-toggle-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 24rpx;
}

.category-dot {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #d03a6a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  position: relative;
}

.category-dot::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: #d03a6a;
  border-radius: 50%;
}

.category-title {
  display: flex;
  flex-direction: column;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #d03a6a;
}

.title-sub {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
  letter-spacing: 2rpx;
}

/* 分类按钮图片 */
.category-btn-img {
  width: 180rpx;
  height: auto;
  border-radius: 0 80rpx 80rpx 0;
}

/* 标签网格 */
.tag-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
  justify-content: space-between;
}

.tag-item {
  width: calc(50% - 8rpx);
  background: linear-gradient(to right, #d03a6a 0%, #e84c7a 50%, #f5a0b8 100%);
  color: #fff;
  text-align: center;
  padding: 18rpx 0;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.tag-item:active {
  opacity: 0.8;
}

/* 声明文字 */
.disclaimer {
  margin: 60rpx auto;
  padding: 40rpx;
  border-radius: 16rpx;
  width: fit-content;
  max-width: 88%;
}

.disclaimer-text {
  display: block;
  color: #d7809f;
  font-size: 24rpx;
  line-height: 1.8;
  text-align: center;
  text-indent: 0.5em;
}

/* 底部品牌 */
.footer-brand {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20rpx 20rpx 0 20rp;
  margin-top: 20rpx;
}

.footer-logo {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.footer-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.footer-title {
  font-size: 32rpx;
  color: #c9386b;
  font-weight: bold;
}

.footer-desc {
  font-size: 24rpx;
  color: #c9386b;
  margin-top: 8rpx;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 底部品牌Logo图片 */
.footer-logo-img {
  width: 80%;
  max-width: 500rpx;
}

/* 产品首页视频区域 */
.video-section {
  padding: 30rpx;
  background: #fff;
}

.video-container {
  position: relative;
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.video-cover {
  width: 100%;
  height: 400rpx;
  display: block;
}

.video-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 8rpx;
}

/* 视频封面容器 */
.video-cover-wrapper {
  position: relative;
  width: 100%;
}

/* 内嵌视频播放器 */
.inline-video {
  width: 100%;
  height: 400rpx;
  display: block;
  border-radius: 16rpx;
}
