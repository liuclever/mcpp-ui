/* 产品详情页样式 */
.container {
  min-height: 100vh;
  background: #fff;
  padding-top: calc(180rpx + env(safe-area-inset-top));
  padding-bottom: 120rpx;
}

/* 品牌栏 */
.brand-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.brand-left,
.brand-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
}

.scan-icon {
  width: 50rpx;
  height: 50rpx;
}

.brand-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.brand-logo {
  height: 60rpx;
  max-width: 200rpx;
}

/* 产品主图 */
.product-main {
  position: relative;
  width: 100%;
  height: 500rpx;
  background: #f5f5f5;
}

.product-img {
  width: 100%;
  height: 100%;
}

/* 内嵌视频播放器 */
.inline-detail-video {
  width: 100%;
  height: 100%;
}

.play-btn-large {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon-large {
  width: 100rpx;
  height: 100rpx;
}

/* 视频/教程切换 */
.video-tabs {
  display: flex;
  justify-content: center;
  padding: 30rpx;
  gap: 20rpx;
}

.tab-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 50rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 28rpx;
  min-width: 200rpx;
}

/* 视频按钮激活状态 */
.video-btn.active {
  background: linear-gradient(90deg, #c93668 0%, #d94a78 100%);
}

/* 视频按钮未激活状态 */
.video-btn.inactive {
  background: #e49ab3;
}

/* 教程按钮激活状态 */
.tutorial-btn.active {
  background: linear-gradient(90deg, #c93668 0%, #d94a78 100%);
}

/* 教程按钮未激活状态 */
.tutorial-btn.inactive {
  background: #e49ab3;
}

.tab-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 查找网点 */
.nearby-entry {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #d03a6a;
  font-size: 26rpx;
}

.location-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

/* 产品信息 */
.product-info {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.info-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.name-wrapper {
  display: flex;
  align-items: flex-start;
}

.name-bar {
  width: 15rpx;
  height: 60rpx;
  background: #d03a6a;
  border-radius: 3rpx;
  margin-right: 40rpx;
  margin-left: -32rpx;
  flex-shrink: 0;
}

.name-content {
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #d03a6a;
  margin-bottom: 4rpx;
}

.product-name-en {
  font-size: 20rpx;
  color: #999;
  text-transform: uppercase;
}

.qrcode-btn {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}

.info-list {
  margin-bottom: 50rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-dot {
  width: 20rpx;
  height: 20rpx;
  background: #d03a6a;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.info-label {
  color: #d03a6a;
  font-size: 26rpx;
}

.info-value {
  color: #d03a6a;
  font-size: 26rpx;
}

.stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  color: #d64675;
  font-size: 24rpx;
}

.stat-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 底部提示 */
.footer-notice {
  padding: 30rpx;
  background: #fff;
  margin: 20rpx 25rpx;
  border-radius: 12rpx;
}

.footer-notice text {
  font-size: 22rpx;
  color: #cc7293;
  line-height: 1.6;
}

/* 底部品牌 */
.footer-brand {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx 60rpx;
  background: #fff;
  margin-bottom: 100rpx;
}

.footer-badge {
  width: 500rpx;
  height: auto;
  display: block;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 60rpx;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #d03a6a;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.share-card {
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.share-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.share-brand-logo {
  height: 60rpx;
  width: auto;
  max-width: 450rpx;
}

.share-logo{
  width: 250rpx;
  height: 70rpx;
  border-radius: 8rpx;
  margin-top: 60rpx;
  margin-left: 20rpx;
}
.share-close-btn {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
  margin-top: 40rpx;
}

.share-img {
  width: 90%;
  height: 500rpx;
  background: #f5f5f5;
  margin: 0 30rpx;
}

.share-info {
  display: flex;
  padding: 30rpx 50rpx 50rpx 50rpx;
}

.share-left {
  flex: 1;
}

.share-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.share-specs {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.share-specs text {
  font-size: 22rpx;
  color: #666;
}

.share-right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-qrcode {
  width: 120rpx;
  height: 120rpx;
}

.qrcode-tip {
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
}

.video-tag {
  background: #d03a6a;
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-top: 8rpx;
}

/* 保存按钮区域 */
.share-actions {
  padding: 20rpx 30rpx 40rpx;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(90deg, #c93668 0%, #d94a78 100%);
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn::after {
  border: none;
}

/* 评论弹窗 */
.comment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.comment-container {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.comment-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.comment-close-btn {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.comment-content {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 评论底部按钮 */
.comment-footer {
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  background: #fff;
  flex-shrink: 0;
}

.comment-input-btn {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  border: none;
  color: #999;
  font-size: 28rpx;
  text-align: left;
  padding-left: 30rpx;
  line-height: 80rpx;
}

.comment-input-btn::after {
  border: none;
}

/* 分享canvas - 隐藏在屏幕外 */
.share-canvas {
  position: fixed;
  left: -9999rpx;
  top: 0;
  width: 600px;
  height: 800px;
}
