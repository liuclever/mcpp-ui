/* 搜索页样式 */
.container {
  min-height: 100vh;
  background: #ffffff;
  padding-top: calc(180rpx + env(safe-area-inset-top));
}

/* 搜索框 */
.search-header {
  padding: 20rpx;
  background: #fff;
}

.search-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.back-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #e5e5e5;
  border-radius: 50rpx;
  overflow: hidden;
}

.search-box input {
  flex: 1;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #d03a6a;
  color: #fff;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 搜索建议 */
.suggestion-list {
  background: #fff;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.suggestion-item text {
  color: #333;
  font-size: 28rpx;
}

/* 搜索历史 */
.history-section {
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  color: #fff;
  font-size: 28rpx;
}

.clear-btn {
  color: #999;
  font-size: 24rpx;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-item {
  background: #333;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

/* 搜索结果 */
.search-result {
  background: #f5f5f5;
  min-height: calc(100vh - 120rpx);
}

.result-header {
  padding: 20rpx 30rpx;
  background: #fff;
}

.result-header text {
  color: #666;
  font-size: 26rpx;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  gap: 20rpx;
}

.product-card {
  width: calc(50% - 10rpx);
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.product-img {
  width: 100%;
  height: 240rpx;
  background: #f0f0f0;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.product-code {
  font-size: 22rpx;
  color: #999;
}

/* 空结果 */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-result text {
  color: #999;
  font-size: 28rpx;
}
