/* pages/test-interaction/test-interaction.wxss */

.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  margin-bottom: 40rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.demo-box {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.vertical-demo {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  min-height: 400rpx;
  background-color: #000;
  position: relative;
}

.video-placeholder {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.log-box {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.log-item {
  font-size: 26rpx;
  color: #666;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.log-item:last-child {
  border-bottom: none;
}

.log-empty {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
}

button {
  width: 100%;
  margin-top: 20rpx;
}
