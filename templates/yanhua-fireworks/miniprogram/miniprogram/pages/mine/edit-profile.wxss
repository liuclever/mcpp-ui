.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-top: calc(100rpx + env(safe-area-inset-top));
  background: linear-gradient(135deg, #d03a6a, #e85a8a);
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  color: #fff;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.back-text {
  font-size: 28rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
}

.save-btn {
  padding: 10rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
}

.save-text {
  font-size: 28rpx;
  color: #fff;
}

.nav-placeholder {
  width: 120rpx;
}

/* 表单区域 */
.form-section {
  margin: 30rpx;
  margin-top: calc(180rpx + env(safe-area-inset-top));
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  width: 160rpx;
}

.form-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.avatar-preview {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.form-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
}

.form-picker {
  display: flex;
  align-items: center;
}

.form-text {
  font-size: 30rpx;
  color: #333;
}

.form-text.placeholder {
  color: #999;
}

.form-arrow {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 底部保存按钮 */
.bottom-save {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.save-button {
  width: 100%;
  height: 90rpx;
  line-height: 65rpx;
  background: linear-gradient(135deg, #d03a6a, #e85a8a);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  border: none;
}

.save-button::after {
  border: none;
}
