.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.points-header {
  background: linear-gradient(135deg, #c93668 0%, #e85a8f 100%);
  padding: 60rpx 40rpx;
  text-align: center;
}

.current-points {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.points-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
}

.points-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
}

.points-list {
  padding: 20rpx;
}

.points-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-type {
  font-size: 36rpx;
  font-weight: bold;
  min-width: 100rpx;
  text-align: center;
}

.type-add {
  color: #07c160;
}

.type-deduct {
  color: #fa5151;
}

.item-info {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.item-reason {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-tag {
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #666;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

.load-more text {
  color: #c93668;
}
