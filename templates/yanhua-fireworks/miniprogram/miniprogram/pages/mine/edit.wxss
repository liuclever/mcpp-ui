/* pages/mine/edit.wxss */
.edit-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
}

/* 编辑区域 */
.edit-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.edit-item {
  padding: 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
}

.edit-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 30rpx;
  color: #333;
  width: 140rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 头像按钮样式 - 重置button默认样式 */
.avatar-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.avatar-button::after {
  border: none;
}

/* 头像样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.item-arrow {
  font-size: 28rpx;
  color: #c0c0c0;
}

/* 输入框样式 */
.item-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

/* 文本样式 */
.item-text {
  font-size: 28rpx;
  color: #333;
}

.item-text.disabled {
  color: #999;
}

.item-text.placeholder {
  color: #c0c0c0;
}

/* 保存按钮 */
.save-button-container {
  padding: 40rpx 30rpx 60rpx;
  background: #f5f5f5;
}

.save-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.save-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 功能菜单 */
.function-menu {
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-label {
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #c0c0c0;
}
