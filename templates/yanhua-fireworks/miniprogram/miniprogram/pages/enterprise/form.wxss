.form-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.form-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.form-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.form-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-size: 28rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  background-color: #fff;
  border-color: #FFD700;
}

.form-picker {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  position: relative;
}

.form-picker::after {
  content: '';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
}

.form-picker.placeholder {
  color: #999;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-textarea:focus {
  background-color: #fff;
  border-color: #FFD700;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(255, 215, 0, 0.3);
  transition: all 0.3s;
}

.submit-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.submit-button[disabled] {
  background: #ccc;
  box-shadow: none;
  opacity: 0.6;
}
