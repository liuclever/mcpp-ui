/* 企业中心主页面样式 */

.enterprise-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
  text-align: center;
}

.retry-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 40rpx;
  border: none;
}

/* 内容容器 */
.content-container {
  padding-bottom: 40rpx;
}

/* 顶部区域 */
.header-section {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 0;
  padding-bottom: 30rpx;
  overflow: hidden;
}

/* 顶部背景图片 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 企业中心标题 */
.header-title {
  position: relative;
  z-index: 1;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

/* Banner包裹 */
.banner-wrapper {
  position: relative;
  z-index: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 0 30rpx;
}

/* Banner图片 */
.banner-image {
  width: 100%;
  border-radius: 20rpx;
}

/* 导航按钮网格 - 两栏布局 */
.columns-section {
  padding: 40rpx 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.columns-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
}

.column-card {
  width: calc((100% - 20rpx) / 2);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 16rpx;
  margin-bottom: 0;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(255, 165, 0, 0.3);
}

.column-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 165, 0, 0.3);
}

.column-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  flex-shrink: 0;
}

.column-info {
  width: 100%;
  text-align: center;
}

.column-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.column-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 品牌故事区域 */
.introduction-section {
  background: #fff;
  margin-top: 20rpx;
  padding: 40rpx 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
  color: #999;
}

.more-text {
  font-size: 26rpx;
  margin-right: 4rpx;
}

.more-arrow {
  font-size: 36rpx;
  font-weight: 300;
}

.introduction-content {
  line-height: 1.8;
}

.introduction-text {
  font-size: 28rpx;
  color: #666;
  white-space: pre-wrap;
}
