<!--品牌故事详情页-->
<view class="detail-page">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-container">
    <view class="loading-text">加载中...</view>
  </view>

  <!-- 品牌故事详情 -->
  <view wx:elif="{{story}}" class="detail-content">
    <!-- 详情头部 -->
    <view class="detail-header">
      <view class="detail-title">{{story.title}}</view>
      <view class="detail-meta">
        <text class="detail-time">{{story.createTime}}</text>
      </view>
    </view>

    <!-- 富文本内容 -->
    <view class="detail-body">
      <rich-text 
        nodes="{{processedContent}}" 
        bindtap="onRichTextTap"
      />
    </view>

    <!-- 返回按钮 -->
    <view class="back-button" bindtap="navigateBack">
      <text class="back-icon">←</text>
      <text class="back-text">返回列表</text>
    </view>
  </view>

  <!-- 空状态 -->
  <view wx:else class="empty-container">
    <view class="empty-text">内容不存在</view>
    <view class="empty-button" bindtap="navigateBack">返回</view>
  </view>
</view>
