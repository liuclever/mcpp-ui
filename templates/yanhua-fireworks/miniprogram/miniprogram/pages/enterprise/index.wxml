<!--企业中心主页面-->
<view class="enterprise-container">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-container">
    <view class="loading-text">加载中...</view>
  </view>

  <!-- 错误状态 -->
  <view wx:elif="{{error}}" class="error-container">
    <view class="error-text">{{error}}</view>
    <button class="retry-button" bindtap="onRetry">重试</button>
  </view>

  <!-- 正常内容 -->
  <view wx:else class="content-container">
    <!-- 顶部区域 -->
    <view class="header-section">
      <!-- 背景图片 -->
      <image src="https://zhengpan-fireworks-1392575669.cos.ap-shanghai.myqcloud.com/miniprogram/assets/images/product-bg.png" class="header-bg" mode="aspectFill"></image>
      
      <!-- 企业中心标题 -->
      <view class="header-title">企业中心</view>
      
      <!-- Banner图片 -->
      <view class="banner-wrapper">
        <image 
          class="banner-image" 
          src="{{config.bannerImageUrl}}" 
          mode="widthFix"
          lazy-load="{{true}}"
          bindload="onBannerLoad"
          binderror="onBannerError"
        />
      </view>
    </view>

    <!-- 栏目列表 - 两栏布局 -->
    <view class="columns-section">
      <view class="columns-grid">
        <view 
          class="column-card" 
          wx:for="{{columns}}" 
          wx:key="id"
          bindtap="goToColumn"
          data-column="{{item}}"
        >
          <image class="column-icon" src="{{item.icon}}" mode="aspectFit" />
          <view class="column-info">
            <view class="column-name">{{item.name}}</view>
            <view class="column-desc">{{item.description}}</view>
          </view>
        </view>
      </view>
    </view>

    <!-- 品牌故事入口 -->
    <view class="introduction-section" bindtap="goToBrandList">
      <view class="section-header">
        <view class="section-title">品牌故事</view>
        <view class="section-more">
          <text class="more-text">查看更多</text>
          <text class="more-arrow">›</text>
        </view>
      </view>
      <view class="introduction-content">
        <text class="introduction-text">{{config.introductionText}}</text>
      </view>
    </view>
  </view>
</view>
