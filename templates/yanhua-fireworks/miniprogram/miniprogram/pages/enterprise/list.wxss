/* 企业中心内容列表页样式 */

.list-page {
  min-height: 100vh;
  background: #fce4ec;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
  text-align: center;
}

.retry-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 40rpx;
  border: none;
}

/* 空状态 */
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 内容列表 */
.content-list {
  padding: 20rpx 30rpx;
}

/* 文字标题形式 & 图文形式 */
.list-item {
  padding: 30rpx 0;
  background: transparent;
  border-bottom: 1rpx solid rgba(208, 58, 106, 0.2);
}

.list-item-image {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.list-cover {
  flex-shrink: 0;
  width: 160rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f0f0f0;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.list-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 120rpx;
  overflow: hidden;
}

.list-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.list-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.list-meta {
  display: flex;
  align-items: center;
}

.list-views {
  font-size: 24rpx;
  color: #d03a6a;
  margin-right: 20rpx;
}

.list-time {
  font-size: 24rpx;
  color: #d03a6a;
}

/* 图片列表形式 - 双列展示 */
.image-grid-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
  width: 100%;
}

.image-grid-item {
  width: 48%;
  flex-shrink: 0;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.grid-image {
  width: 100%;
  height: 240rpx;
  display: block;
}

.grid-title {
  padding: 16rpx 20rpx 8rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.grid-meta {
  padding: 0 20rpx 16rpx;
  text-align: center;
}

.grid-views {
  font-size: 22rpx;
  color: #d03a6a;
}

/* 图文形式 - 上标题下图片 */
.article-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.article-images {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.article-image {
  border-radius: 8rpx;
  background: #f0f0f0;
}

.article-image.single {
  width: 100%;
  height: 300rpx;
}

.article-image.double {
  width: calc(50% - 6rpx);
  height: 200rpx;
}

.article-image.triple {
  width: calc(33.33% - 8rpx);
  height: 160rpx;
}

.article-meta {
  display: flex;
  align-items: center;
}

.article-views {
  font-size: 24rpx;
  color: #d03a6a;
}

/* 加载更多 */
.load-more-container {
  padding: 40rpx 0;
  text-align: center;
}

.loading-more,
.load-more-tip {
  font-size: 24rpx;
  color: #999;
}

.no-more {
  font-size: 26rpx;
  color: #d03a6a;
}
