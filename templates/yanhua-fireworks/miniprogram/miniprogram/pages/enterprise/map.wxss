.map-page {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 地图 */
.sales-map {
  width: 100%;
  height: 100%;
}

/* 网点列表抽屉 */
.points-drawer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: height 0.3s ease;
  z-index: 10;
}

/* 抽屉把手 */
.drawer-handle {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.handle-bar {
  width: 80rpx;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
}

/* 网点列表 */
.points-list {
  height: calc(100% - 80rpx);
  padding: 0 32rpx 32rpx;
}

/* 网点项 */
.point-item {
  padding: 32rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.point-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.point-address {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.point-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.point-phone {
  font-size: 26rpx;
  color: #999;
}

.point-distance {
  font-size: 26rpx;
  color: #ff6b00;
  font-weight: 500;
}

/* 操作按钮 */
.point-actions {
  display: flex;
  gap: 16rpx;
}

.action-button {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  border: 2rpx solid #ff6b00;
  background: #fff;
  color: #ff6b00;
  padding: 0;
  margin: 0;
}

.action-button::after {
  border: none;
}

.action-button.primary {
  background: #ff6b00;
  color: #fff;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
