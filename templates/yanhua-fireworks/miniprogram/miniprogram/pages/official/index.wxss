/* 官网页样式 */
.container {
  min-height: 100vh;
  background: #fff;
  padding-bottom: 120rpx;
}

/* 顶部区域 */
.header-section {
  position: relative;
  width: 100%;
  background: #d03a6a;
}

.poster-img {
  width: 100%;
  display: block;
}

.enter-btn-wrapper {
  position: absolute;
  top: 62%;
  left: 50%;
  transform: translateX(-50%);
}

.enter-btn-img {
  width: 240rpx;
}

.main-title {
  position: absolute;
  top: 68%;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 8rpx;
}

/* 搜索区域 */
.search-section {
  background: #d03a6a;
  padding: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fcd2e0;
  border-radius: 50rpx;
  padding: 20rpx 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-box text {
  flex: 1;
  color: #999;
  font-size: 26rpx;
}

.scan-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 页眉条 */
.header-bar {
  width: 100%;
}

.header-bar-img {
  width: 100%;
  display: block;
}

/* 官网详情 */
.official-detail {
  width: 100%;
}

.detail-img {
  width: 100%;
}


/* 关于我们 */
.about-section, .visit-section, .firework-gallery-section {
  padding: 40rpx 30rpx;
  background: #d03a6a;
  margin-bottom: 0;
}

.section-title-box {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.section-title-img {
  width: 300rpx;
}

.about-content {
  margin-bottom: 30rpx;
}

.about-text {
  display: block;
  font-size: 26rpx;
  color: #f0e09e;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-indent: 2em;
}

.about-gallery, .visit-gallery {
  margin-top: 150rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 0 8rpx;
  position: relative;
}

.gallery-item {
  width: calc(50% - 16rpx);
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #fff;
  margin: 0 8rpx 16rpx 8rpx;
}

.gallery-item.full {
  width: 100%;
  height: 280rpx;
}

.gallery-item image {
  width: 100%;
  height: 100%;
}

/* MORE按钮 */
.more-btn {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  z-index: 10;
}

/* 烟火燃放画廊 */
.firework-gallery {
  display: flex;
  flex-direction: column;
}

.firework-photo {
  width: 90%;
  margin: 0 auto 20rpx auto;
  border-radius: 16rpx;
  display: block;
}

/* 联系我们 */
.contact-section {
  padding: 40rpx 30rpx;
  background: #d03a6a;
  margin-bottom: 0;
}

.contact-section .section-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.contact-section .title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #f0e09e;
  letter-spacing: 4rpx;
}

.contact-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}

.contact-logo {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.contact-logo .logo-img {
  width: 400rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-of-type {
  border-bottom: none;
}

.contact-item.clickable {
  position: relative;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.contact-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 12rpx;
  opacity: 0.5;
}

.contact-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.action-btn.primary {
  background: #d03a6a;
  color: #fff;
}

.action-btn.secondary {
  background: #f0e09e;
  color: #d03a6a;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* 底部品牌 */
.footer-brand {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 40rpx 40rpx;
  background: #fff;
}

.footer-logo-img {
  width: 500rpx;
}

/* 首页视频区域 */
.video-section {
  padding: 30rpx;
  background: #fff;
}

.video-container {
  position: relative;
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.video-cover {
  width: 100%;
  height: 400rpx;
  display: block;
}

.video-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 内嵌视频播放器 */
.inline-home-video {
  width: 100%;
  height: 400rpx;
  display: block;
  border-radius: 16rpx;
}

/* 点击进入按钮区域 */
.enter-btn-section {
  background: #d03a6a;
  padding: 30rpx 0 40rpx;
  display: flex;
  justify-content: center;
}

.enter-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid #fff;
  border-radius: 40rpx;
  padding: 16rpx 60rpx;
}

.enter-btn text {
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 4rpx;
}

/* 品牌故事标题栏 */
.brand-story-title-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 60rpx;
  background: #fff;
}

.title-line {
  flex: 1;
  height: 2rpx;
  background: #ccc;
  max-width: 100rpx;
}

.title-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  padding: 0 30rpx;
}

/* 品牌故事区域 */
.brand-story-section {
  width: 100%;
}

.brand-story-img {
  width: 100%;
  display: block;
}

/* 首页内容图片区域 */
.content-images-section {
  width: 100%;
}

.content-img {
  width: 100%;
  height: auto;
  display: block;
  margin: 0;
  padding: 0;
  vertical-align: bottom;
  border: none;
  outline: none;
}

/* 系列分组区域 */
.content-series-section {
  width: 100%;
  margin: 0;
  padding: 0;
  font-size: 0;
  line-height: 0;
  overflow: hidden;
}

.series-title-bar {
  background: linear-gradient(135deg, #d03a6a 0%, #e85a8a 100%);
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.series-title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.series-images {
  width: 100%;
  font-size: 0;
  line-height: 0;
  overflow: hidden;
}

/* 品牌故事列表区域 */
.brand-stories-section {
  background: #fce4ec;
  padding: 30rpx 0;
}

.section-title-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 60rpx;
}

.section-title-bar .title-line {
  flex: 1;
  height: 2rpx;
  background: #ccc;
  max-width: 100rpx;
}

.section-title-bar .title-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  padding: 0 30rpx;
}

.brand-stories-list {
  padding: 0 30rpx;
}

.brand-story-item {
  padding: 30rpx;
  background: transparent;
  border-bottom: 1rpx solid rgba(208, 58, 106, 0.2);
}

.brand-story-item:last-child {
  border-bottom: none;
}

.story-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.story-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.story-meta {
  display: flex;
  align-items: center;
}

.story-views {
  font-size: 24rpx;
  color: #d03a6a;
  margin-right: 20rpx;
}

.story-time {
  font-size: 24rpx;
  color: #d03a6a;
}

/* 查看更多 */
.view-more-section {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.view-more-text {
  font-size: 28rpx;
  color: #d03a6a;
}

.view-more-arrow {
  font-size: 28rpx;
  color: #d03a6a;
  margin-left: 8rpx;
}
