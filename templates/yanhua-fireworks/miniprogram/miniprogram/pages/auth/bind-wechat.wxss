/* pages/auth/bind-wechat.wxss */
.bind-wechat-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #07c160 0%, #00a854 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 标题 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 80rpx;
  text-align: center;
}

/* 微信图标 */
.wechat-icon-wrapper {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.wechat-icon {
  width: 120rpx;
  height: 120rpx;
}

/* 说明文字 */
.description {
  width: 100%;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  backdrop-filter: blur(10rpx);
}

.desc-item {
  font-size: 28rpx;
  color: #fff;
  line-height: 48rpx;
  margin-bottom: 12rpx;
}

.desc-item:last-child {
  margin-bottom: 0;
}

/* 绑定按钮 */
.bind-btn {
  width: 100%;
  height: 96rpx;
  background: #fff;
  color: #07c160;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.bind-btn.disabled {
  background: rgba(255, 255, 255, 0.5);
  color: rgba(7, 193, 96, 0.5);
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 提示信息 */
.tips {
  margin-top: 40rpx;
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 40rpx;
}

/* 账号合并对话框 */
.merge-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.merge-dialog {
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
}

.dialog-content {
  padding: 20rpx 40rpx 40rpx;
}

.dialog-text {
  font-size: 28rpx;
  color: #666;
  line-height: 44rpx;
  margin-bottom: 16rpx;
}

.dialog-text.warning {
  color: #ff6b6b;
  font-size: 24rpx;
}

.dialog-input-wrapper {
  margin-top: 32rpx;
}

.dialog-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.dialog-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.dialog-input:focus {
  border-color: #07c160;
}

.dialog-input.error {
  border-color: #ff4444;
}

.error-text {
  font-size: 24rpx;
  color: #ff4444;
  margin-top: 8rpx;
}

.dialog-actions {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
}

.dialog-btn {
  flex: 1;
  height: 100rpx;
  background: #fff;
  border: none;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
}

.dialog-btn.cancel {
  color: #999;
  border-right: 2rpx solid #f0f0f0;
}

.dialog-btn.confirm {
  color: #07c160;
  font-weight: 500;
}

.dialog-btn::after {
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 已绑定状态 */
.bound-state, .unbound-state {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-icon-wrapper {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.success-icon {
  font-size: 100rpx;
  color: #07c160;
  font-weight: bold;
}

/* 绑定信息 */
.bound-info {
  width: 100%;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 60rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.info-value {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.info-value.success {
  color: #90EE90;
}

/* 解绑按钮 */
.unbind-btn {
  width: 100%;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.unbind-btn::after {
  border: none;
}
