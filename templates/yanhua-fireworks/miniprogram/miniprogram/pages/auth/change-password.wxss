/* 修改密码页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 顶部导航 */
.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #d03a6a 0%, #e91e63 100%);
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.nav-placeholder {
  width: 60rpx;
}

/* 表单区域 */
.form-section {
  background: #fff;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.form-input {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
}

.eye-icon {
  font-size: 36rpx;
  padding: 10rpx;
  cursor: pointer;
}

/* 密码要求提示 */
.password-hint {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #fff9e6;
  border-radius: 12rpx;
  border-left: 4rpx solid #faad14;
}

.hint-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

.hint-text:first-child {
  font-weight: bold;
  margin-bottom: 8rpx;
}

/* 按钮区域 */
.button-section {
  padding: 40rpx 30rpx;
}

.submit-button {
  background: linear-gradient(135deg, #d03a6a 0%, #e91e63 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  padding: 28rpx 0;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(208, 58, 106, 0.3);
}

.submit-button::after {
  border: none;
}
