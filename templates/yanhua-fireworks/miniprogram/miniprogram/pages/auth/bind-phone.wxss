.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.content {
  padding: 40rpx 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.form-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.form-item.sms-item {
  justify-content: space-between;
}

.input {
  flex: 1;
  font-size: 30rpx;
}

.input.error {
  border-color: #ff4d4f;
}

.error-text {
  color: #ff4d4f;
  font-size: 24rpx;
  margin: -20rpx 0 20rpx 30rpx;
}

.sms-btn {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #ff6b9d;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  text-align: center;
  border: none;
  padding: 0;
}

.sms-btn.disabled {
  background: #ccc;
}

.bind-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  text-align: center;
  margin-top: 60rpx;
  border: none;
}

.bind-btn[disabled] {
  background: #ccc;
}

.skip-btn {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 40rpx;
}
